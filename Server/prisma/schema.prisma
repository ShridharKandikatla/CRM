generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Staff{
  id  Int @id @default(autoincrement())
  email String @unique
  password String
}

// Student model
model Student {
  id        Int      @id @default(autoincrement())
  gender    String?
  firstName String
  lastName  String?
  email     String?   @unique
  mobile    String 
  diposition String @default("01 - New")
  subDiposition String? @default("Not Known")


  course       Course? 
  payment Payment?
  // Add more fields as needed
}

// Course model
model Course {
  id           Int       @id @default(autoincrement())
  courseName      String 
  specialization  String?
  courseFee Int?
  registrationNo Int?
  erpComments String?

  // studentId Int     @unique
  student   Student @relation(fields: [id],references: [id], onDelete: Cascade)
  // Add more fields as needed
}

// Payment model
model Payment {
  id           Int       @id @default(autoincrement())
  amountReceived Int?
  discountAmount Int?
  discountReason String?
  studyMaterial String?
  studyMaterialDiscount Int?
  paymentDate  DateTime?  @default(now())


  studentId    Int       @unique
  student      Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
}